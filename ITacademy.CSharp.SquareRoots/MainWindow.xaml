<Window x:Class="ITacademy.CSharp.SquareRoots.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITacademy.CSharp.SquareRoots"
        mc:Ignorable="d"
        Title="MainWindow" Height="145" Width="552">
    <Grid>
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Left" Margin="12,12,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Width="398" Height="23"/>
        <Button x:Name="calculateButton" Content="Calculate" Margin="415,12,10,0" VerticalAlignment="Top" Height="23" Click="calculateButton_Click"/>
        <Label x:Name="frameworkLabel" Content="0.00 (Using .NET Framework)" HorizontalAlignment="Left" Margin="12,40,0,0" Width="398" Height="25" VerticalAlignment="Top"/>
        <Label x:Name="newtonLabel" Content="0.00 (Using Newton)" HorizontalAlignment="Left" Margin="12,70,0,0" Width="398" Height="26" VerticalAlignment="Top"/>

    </Grid>
</Window>
